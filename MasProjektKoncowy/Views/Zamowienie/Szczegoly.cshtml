@model MasProjektKoncowy.ViewModels.ZamowienieViewModel

@{
    ViewData["Title"] = "Szczegoly";
}

<h1>Sczegoly</h1>

<div>
    <h4>Zamowienie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Osoba ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Osoba.OsobaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Osoba.Imie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Osoba.Imie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Osoba.Nazwisko)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Osoba.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zamowienie.Cena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zamowienie.Cena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zamowienie.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zamowienie.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zamowienie.PlanowyTerminRealizacji)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zamowienie.PlanowyTerminRealizacji.Year)/@Model.Zamowienie.PlanowyTerminRealizacji.Month/@Model.Zamowienie.PlanowyTerminRealizacji.Day
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zamowienie.TerminZrealizowany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zamowienie.TerminZrealizowany.Year)/@Model.Zamowienie.TerminZrealizowany.Month/@Model.Zamowienie.TerminZrealizowany.Day
        </dd>

    </dl> 
</div>
<div>
    <a asp-action="Index">Wróc do listy zamówień</a> |
    <a asp-action="InfoProjekt" asp-route-id="@Model.Zamowienie.ZamowienieId">Sprawdz dane projektu</a>
</div>
